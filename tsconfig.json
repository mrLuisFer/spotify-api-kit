{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./src",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outFile": "./dist/index.js"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
